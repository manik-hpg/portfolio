---
import { ExternalLink } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  tags: string[];
  href?: string;
  external?: boolean;
}

const { title, description, tags, href, external = false } = Astro.props;
---

<article class="group">
  <a
    href={href || '#'}
    target={external ? '_blank' : undefined}
    rel={external ? 'noopener noreferrer' : undefined}
    class="block p-6 border border-gray-200 dark:border-neutral-800 rounded-xl transition-all duration-200 hover:border-gray-400 dark:hover:border-neutral-600 hover:-translate-y-1"
  >
    <div class="flex items-start justify-between gap-4">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-neutral-50 group-hover:underline underline-offset-4">
        {title}
      </h3>
      {external && (
        <ExternalLink class="w-4 h-4 text-gray-400 dark:text-neutral-500 flex-shrink-0 mt-1" />
      )}
    </div>

    <p class="mt-2 text-sm text-gray-600 dark:text-neutral-400 leading-relaxed line-clamp-3">
      {description}
    </p>

    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map(tag => (
        <span class="px-2 py-1 text-xs font-medium text-gray-500 dark:text-neutral-500 bg-gray-100 dark:bg-neutral-800 rounded">
          {tag}
        </span>
      ))}
    </div>
  </a>
</article>
