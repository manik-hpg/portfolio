---
import BaseLayout from '../layouts/BaseLayout.astro';
import { ArrowLeft } from 'lucide-astro';
---

<BaseLayout title="404 - Page Not Found">
  <section class="py-24 sm:py-32">
    <div class="container-wide">
      <div class="max-w-xl mx-auto text-center">
        <p class="text-sm font-medium text-gray-500 dark:text-neutral-500">404</p>
        <h1 class="mt-4 text-3xl sm:text-4xl font-bold tracking-tight text-gray-900 dark:text-neutral-50">
          Page not found
        </h1>
        <p class="mt-4 text-lg text-gray-600 dark:text-neutral-400">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <a
          href="/"
          class="mt-8 inline-flex items-center gap-2 text-sm font-medium text-gray-900 dark:text-neutral-50 hover:text-gray-600 dark:hover:text-neutral-400 transition-colors"
        >
          <ArrowLeft class="w-4 h-4" />
          Back to home
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
