---
import { Github, Linkedin, Mail } from 'lucide-astro';

const currentYear = new Date().getFullYear();

const socialLinks = [
  { href: 'https://github.com/manik-hpg', label: 'GitHub', icon: Github },
  { href: 'https://linkedin.com/in/maniksoin', label: 'LinkedIn', icon: Linkedin },
  { href: 'mailto:manik.soin@gmail.com', label: 'Email', icon: Mail },
];
---

<footer class="border-t border-gray-200 dark:border-neutral-800 bg-gray-50 dark:bg-neutral-900">
  <div class="container-wide py-12">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <!-- Copyright -->
      <p class="text-sm text-gray-500 dark:text-neutral-500">
        &copy; {currentYear} Manik Soin
      </p>

      <!-- Social Links -->
      <div class="flex items-center gap-6">
        {socialLinks.map(link => (
          <a
            href={link.href}
            target={link.href.startsWith('http') ? '_blank' : undefined}
            rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            aria-label={link.label}
            class="text-gray-400 dark:text-neutral-500 hover:text-gray-900 dark:hover:text-neutral-50 transition-colors"
          >
            <link.icon class="w-5 h-5" />
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
