---
import { Github, Linkedin, Mail, ArrowRight } from 'lucide-astro';

const socialLinks = [
  { href: 'https://github.com/manik-hpg', label: 'GitHub', icon: Github },
  { href: 'https://linkedin.com/in/maniksoin', label: 'LinkedIn', icon: Linkedin },
  { href: 'mailto:manik.soin@gmail.com', label: 'Email', icon: Mail },
];
---

<section class="pt-20 pb-16 sm:pt-32 sm:pb-24">
  <div class="container-wide">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Name -->
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight text-gray-900 dark:text-neutral-50 animate-fade-in">
        Manik Soin
      </h1>

      <!-- Subtitle -->
      <p class="mt-4 text-lg sm:text-xl text-gray-500 dark:text-neutral-400 animate-fade-in" style="animation-delay: 75ms;">
        Software Engineer &middot; Hong Kong
      </p>

      <!-- Description -->
      <p class="mt-6 text-base sm:text-lg text-gray-600 dark:text-neutral-400 max-w-xl mx-auto leading-relaxed animate-fade-in" style="animation-delay: 150ms;">
        Building payment infrastructure across Southeast Asia. Full-stack engineer with expertise in distributed systems, fintech, and building products from zero to one.
      </p>

      <!-- CTA Buttons -->
      <div class="mt-10 flex flex-wrap items-center justify-center gap-4 animate-fade-in" style="animation-delay: 225ms;">
        <a
          href="/projects"
          class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium bg-gray-900 dark:bg-neutral-50 text-white dark:text-neutral-900 rounded-lg hover:bg-gray-800 dark:hover:bg-neutral-200 transition-all hover:-translate-y-0.5"
        >
          View Projects
          <ArrowRight class="w-4 h-4" />
        </a>

        <a
          href="/blog"
          class="inline-flex items-center gap-2 px-6 py-3 text-sm font-medium text-gray-900 dark:text-neutral-50 border border-gray-200 dark:border-neutral-800 rounded-lg hover:bg-gray-50 dark:hover:bg-neutral-900 transition-colors"
        >
          Read Blog
        </a>
      </div>

      <!-- Social Links -->
      <div class="mt-12 flex items-center justify-center gap-6 animate-fade-in" style="animation-delay: 300ms;">
        {socialLinks.map(link => (
          <a
            href={link.href}
            target={link.href.startsWith('http') ? '_blank' : undefined}
            rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
            aria-label={link.label}
            class="text-gray-400 dark:text-neutral-500 hover:text-gray-900 dark:hover:text-neutral-50 transition-colors"
          >
            <link.icon class="w-5 h-5" />
          </a>
        ))}
      </div>
    </div>
  </div>
</section>
