---
import { Calendar, Clock } from 'lucide-astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  href: string;
  readingTime?: number;
}

const { title, description, pubDate, href, readingTime } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group py-6 border-b border-gray-100 dark:border-neutral-800 last:border-0">
  <a href={href} class="block hover:opacity-70 transition-opacity">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-neutral-50 group-hover:underline underline-offset-4">
      {title}
    </h3>

    <div class="mt-2 flex items-center gap-4 text-sm text-gray-500 dark:text-neutral-500">
      <span class="flex items-center gap-1.5">
        <Calendar class="w-4 h-4" />
        {formattedDate}
      </span>
      {readingTime && (
        <span class="flex items-center gap-1.5">
          <Clock class="w-4 h-4" />
          {readingTime} min read
        </span>
      )}
    </div>

    <p class="mt-3 text-sm text-gray-600 dark:text-neutral-400 line-clamp-2">
      {description}
    </p>
  </a>
</article>
