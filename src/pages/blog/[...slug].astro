---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { ArrowLeft, Calendar, Clock } from 'lucide-astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Simple reading time calculation
const wordsPerMinute = 200;
const words = post.body.split(/\s+/).length;
const readingTime = Math.ceil(words / wordsPerMinute);
---

<BaseLayout title={`${post.data.title} - Manik Soin`} description={post.data.description}>
  <article class="py-16 sm:py-24">
    <div class="container-wide">
      <div class="max-w-2xl mx-auto">
        <!-- Back link -->
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-sm text-gray-500 dark:text-neutral-400 hover:text-gray-900 dark:hover:text-neutral-50 transition-colors mb-8"
        >
          <ArrowLeft class="w-4 h-4" />
          Back to blog
        </a>

        <!-- Header -->
        <header class="mb-10">
          <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-gray-900 dark:text-neutral-50">
            {post.data.title}
          </h1>

          <div class="mt-4 flex items-center gap-4 text-sm text-gray-500 dark:text-neutral-500">
            <span class="flex items-center gap-1.5">
              <Calendar class="w-4 h-4" />
              {formattedDate}
            </span>
            <span class="flex items-center gap-1.5">
              <Clock class="w-4 h-4" />
              {readingTime} min read
            </span>
          </div>

          {post.data.tags.length > 0 && (
            <div class="mt-4 flex flex-wrap gap-2">
              {post.data.tags.map((tag: string) => (
                <span class="px-2 py-1 text-xs font-medium text-gray-500 dark:text-neutral-500 bg-gray-100 dark:bg-neutral-800 rounded">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <!-- Content -->
        <div class="prose-custom prose prose-gray dark:prose-invert max-w-none">
          <Content />
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<style is:global>
  .prose h2 {
    @apply text-2xl font-semibold mt-12 mb-4 text-gray-900 dark:text-neutral-50;
  }

  .prose h3 {
    @apply text-xl font-semibold mt-8 mb-3 text-gray-900 dark:text-neutral-50;
  }

  .prose p {
    @apply mb-4 text-gray-600 dark:text-neutral-400 leading-relaxed;
  }

  .prose ul {
    @apply mb-4 pl-6 space-y-2;
  }

  .prose li {
    @apply text-gray-600 dark:text-neutral-400;
  }

  .prose strong {
    @apply text-gray-900 dark:text-neutral-50 font-semibold;
  }

  .prose code {
    @apply bg-gray-100 dark:bg-neutral-800 px-1.5 py-0.5 rounded text-sm;
  }

  .prose pre {
    @apply bg-neutral-900 dark:bg-neutral-800 rounded-lg p-4 overflow-x-auto mb-4;
  }

  .prose pre code {
    @apply bg-transparent p-0;
  }

  .prose a {
    @apply text-gray-900 dark:text-neutral-50 underline underline-offset-4 hover:text-gray-600 dark:hover:text-neutral-400;
  }
</style>
